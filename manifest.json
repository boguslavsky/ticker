{
    "manifest_version": 2,
    "version": "0.0.1",
    "name": "Bitcoin Ticker",
    "description": "Aggregate price indexes from major bitcoin exchanges.",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
